@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="mt-5 text-center">All Users</h1>
<br />

<hr />

<div>
    <a class="btn btn-outline-secondary float-left" asp-action="Index" asp-controller="Admin">Back</a>
    <a class="btn btn-primary float-left" id="register" asp-area="Identity" asp-page="/Account/Register">Add new User</a>
</div>

<div class="row">
    <div class="col-md-8">
        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title text-center">@user.UserName</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            User Email : @user.Email
                        </p>
                        <p class="card-text">
                            User Id : @user.Id
                        </p>
                    </div>
                    <div class="card-footer">
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-primary" asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id">Edit</a>
                            <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                <span>Are you sure you want to delete?</span>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="#" class="btn btn-primary"
                                   onclick="confirmDelete('@user.Id', false)">No</a>
                            </span>
                            <span id="deleteSpan_@user.Id">
                                <a href="#" class="btn btn-danger"
                                   onclick="confirmDelete('@user.Id', true)">Delete</a>
                            </span>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No users created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a user
                    </h5>
                    <a class="btn btn-primary float-left" id="register" asp-area="Identity" asp-page="/Account/Register">Add new User</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
