@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="mt-5 text-center">All Users</h1>
<br />

<hr />

<div>
    <a class="btn btn-outline-secondary float-left" asp-action="Index" asp-controller="Admin">Back</a>
    <a class="btn btn-primary float-left" id="register" asp-area="Identity" asp-page="/Account/Register">Add new user</a>
</div>

<div class="row">
    <div class="col-md-8">
        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title text-center">@user.UserName</h5>
                    </div>
                    <div class="card-body">
                        User Id : @user.Id
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger float-right">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No users created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a user
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Account" asp-action="Register">
                        Add new user
                    </a>
                </div>
            </div>
        }
    </div>
</div>
