@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<br />
<h1 class="mt-5 text-center">All Roles</h1>
<br />

<hr />

<div>
    <a class="btn btn-outline-secondary float-left" asp-action="Index" asp-controller="Admin">Back</a>
    <a class="btn btn-primary float-left" asp-action="CreateRole" asp-controller="Admin">Add new role</a>
</div>

<div class="row">
    <div class="col-md-8">
        @if (Model.Any())
        {
            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class=" card-header">
                        <h3 class="card-title text-center">@role.Name</h3>
                    </div>
                    <div class="card-body">
                        Role Id : @role.Id
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary"
                           asp-action="EditRole"
                           asp-controller="Admin"
                           asp-route-id="@role.Id">
                            Edit
                        </a>
                        <a href="#" class="btn btn-danger float-right">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="Admin" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>
        }

    </div>
</div>



