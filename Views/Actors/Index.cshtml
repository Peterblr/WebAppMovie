@model IEnumerable<WebAppMovie.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<br />
<h1 class="mt-5 text-center">Index Of Actors</h1>
<br />

<div style="position: fixed; top: 100px; left: 50px" class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Actor
    </a>
</div>
<table class="table">
    @foreach (var item in Model)
    {
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Biografy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <img class="rounded-pill" src="@item.ImageUrl" alt="@item.FullName" style="max-width: 150px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayOfBirth)
                </td>
                <td style="max-width: 300px">
                    @Html.DisplayFor(modelItem => item.Biografy)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ActorId">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ActorId">
                        <i class="bi bi-eye"></i>Details
                    </a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActorId">
                        <i class="bi bi-trash"></i>Delete
                    </a>
                </td>
            </tr>
        </tbody>
    }
</table>
