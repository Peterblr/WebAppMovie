@model WebAppMovie.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<br />
<h1 class="mt-5 text-center">Details Actor</h1>
<br />

<div class="row flex-nowrap">
    <div class="col-md-6 ">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10 text-center">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.DayOfBirth)
            </dt>
            <dd class="col-sm-10 text-center">
                @Html.DisplayFor(model => model.DayOfBirth)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="ImageUrl" class="form-control" />
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Biografy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Biografy)
            </dd>
        </dl>
    </div>
    <div class="form-group text-right">
        <img id="ImagePreview" style="max-width: 450px" />
    </div>
</div>

<div class="form-group">
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.ActorId">
        <i class="bi bi-pencil-square"></i>Edit
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImageUrl").val();
        })
    </script>
}
