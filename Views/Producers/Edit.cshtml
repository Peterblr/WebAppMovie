@model WebAppMovie.Models.Producer

@{
    ViewData["Title"] = "Edit";
}

<br />
<h1 class="mt-5">Edit Producer</h1>
<br />

<div class="row flex-nowrap">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group text-center">
                <img id="ImagePreview" class="border-info rounded-pill" style="max-width: 150px" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProducerId" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfBirth" class="control-label"></label>
                <input asp-for="DayOfBirth" class="form-control" />
                <span asp-validation-for="DayOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biografy" class="control-label"></label>
                <textarea asp-for="Biografy" class="form-control"></textarea>
                <span asp-validation-for="Biografy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-info float-right" />
            </div>
        </form>
    </div>
    <div class="m-0">
        <img src="https://cs10.pikabu.ru/post_img/2019/09/02/0/1567374770171861043.jpg" alt="img">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImagePreview');
            output.src = $("#ImageUrl").val();
        })
    </script>
}
