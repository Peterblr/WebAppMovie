@model WebAppMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="mt-5 text-center">Details</h1>
<br />

<div class="row">
    <div class="col-md-10 ">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h1 class="card-title text-center">
                                @Model.Title
                            </h1>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageUrl" width="100%" alt="@Model.Title">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Producer: </b>
                            <hr />
                            <div class="row">
                                @foreach (var producer in Model.Producers)
                                {
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@producer.ImageUrl" style="max-width: 50px" />
                                        <br />
                                        <a asp-controller="Producers" asp-action="Details" asp-route-id="@producer.ProducerId">@producer.FullName</a>
                                    </div>
                                }
                            </div>
                        </p>
                        <p class="card-text">
                            <b>Actors: </b>
                            <hr />
                            <div class="row">
                                @foreach (var actor in Model.Actors)
                                {
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@actor.ImageUrl" style="max-width: 50px" />
                                        <br />
                                        <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorId">@actor.FullName</a>
                                    </div>
                                }
                            </div>
                        </p>
                        <p class="card-text"><b>Genre: </b>@Model.Genre</p>
                        <p class="card-text"><b>Category: </b>@Model.Rating</p>
                        <p class="card-text"><b>Day Of Release: </b>@Model.ReleaseDate.ToShortDateString()</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <p class="card-text">@Model.Description</p>
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">Back to List</a>
                        </p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3>Comments</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Comments.Any())
                        {
                            foreach (var comment in Model.Comments)
                            {
                                <div class="card-footer">
                                    <p>CommentId: @comment.CommentId</p>
                                </div>
                                <div class="card">
                                    <p class="card-text">@comment.CommentItem</p>
                                    <br />
                                </div>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the moment</h5>
                        }
                    </div>
                </div>
                <a class="btn btn-outline-primary float-right" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>



